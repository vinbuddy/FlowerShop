@using FlowerShop.Models
@{
    ViewBag.Title = "Profile";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}

@{
    User currentUser = null;

    if (Session["User"] != null)
    {
        currentUser = (User)Session["User"];
    }

}

@using (Html.BeginForm("EditProfile", "User", FormMethod.Post, new { enctype = "multipart/form-data", @class = "mt-3 border rounded-10 p-3" }))
{
    <h5 class="text-dark">Hồ sơ của tôi</h5>
    <div class="row pt-4">
        <div class="col-8">
            <div class="h-100 d-flex flex-column justify-content-between">
                <div>
                    <p>
                        <span style="width: 150px;" class="d-inline-block text-desc">Tên người dùng</span>
                        <input name="UserName" type="text" value="@currentUser.UserName" class="ms-3 px-2 py-1 border rounded-5 text-dark" />
                        <input name="Id" type="text" value="@currentUser.Id" hidden />

                    </p>
                    <p class="mt-3">
                        <span style="width: 150px;" class="d-inline-block text-desc">Email</span>
                        <span class="ms-3 text-dark">huynhthevinh.work@gmail.com</span>
                    </p>
                </div>

                <div>
                    <button type="submit" class="btn bg-primary text-white">Lưu thông tin</button>
                </div>
            </div>
        </div>
        <div class="col-4">
            <div class="text-center">
                <img id="avatar" width="200" height="200" class="object-fit-cover rounded-pill border d-block mx-auto" src="~/Assets/ImageStorage/Avatars/@currentUser.Avatar" />
                <label class="mt-3 btn bg-secondary" for="avatar-input">Chọn ảnh</label>
                <input name="ImageFile" id="avatar-input" hidden type="file" accept=".jpg,.jpeg,.png" />
            </div>
        </div>

    </div>
}

