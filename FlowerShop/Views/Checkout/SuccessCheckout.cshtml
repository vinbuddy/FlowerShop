@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đặt hàng thành công";

}

<div style="min-height: 500px" class=" d-flex align-items-center justify-content-center">
    <div class="p-4 shadow-sm border rounded-10">
        <header class="text-center">
            <i style="color: #1ed760; font-size: 60px;" class=' bx bxs-check-circle'></i>
            <h5 class="mt-2">Cảm ơn vì đơn hàng của bạn</h5>
        </header>
        <div class="my-2 pb-4">
            <p class="text-desc ">Thông tin chi tiết về đơn hàng sẽ được gửi đến địa chỉ email của bạn</p>
            <div class="mt-3 d-flex align-items-center justify-content-between">
                <div class="px-3 py-2 bg-secondary rounded-pill">
                    Mã đơn hàng #@TempData["OrderId"] - @TempData["OrderStatus"]
                </div>
                <p>Ngày đặt: <span>@TempData["OrderDate"]</span></p>
            </div>
        </div>
        <footer style="border-top: 2px dashed #ccc;" class="pt-4 d-flex align-items-center justify-content-end">
            <a class="btn" href="/Home/Index">Trang chủ</a>
            <a class="btn bg-secondary" href="/User/Purchase">Theo dõi đơn hàng</a>
        </footer>
    </div>
</div>