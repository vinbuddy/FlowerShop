@model FlowerShop.ViewModel.RegisterVM
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<main id="auth">
    <section class="vh-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100 ">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black rounded-30">
                        @using (Html.BeginForm())
                        {
                            <div class="card-body p-md-4 ">
                                <div class="row">
                                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                                             class="img-fluid" alt="Sample image">

                                    </div>
                                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                        <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Đăng nhập</p>

                                        <div class="mx-1 mx-md-4">

                                            <div class="mb-4">
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="form3Example4c">Email</label>
                                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Nhập địa chỉ Email", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })

                                                </div>
                                            </div>

                                            <div class="mb-4">
                                                <div class="form-outline flex-fill mb-0">
                                                    <label class="form-label" for="form3Example4c">Mật khẩu</label>
                                                    @Html.TextBoxFor(m => m.Password, new { type = "password", placeholder = "Nhập mật khẩu", @class = "form-control" })
                                                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                            <p class="text-danger mb-4 text-center">
                                                @ViewBag.Notification
                                            </p>

                                            <div class="d-flex justify-content-center mb-2 mb-lg-4">
                                                <button type="submit"
                                                        class="w-100 btn bg-primary text-white btn-lg">
                                                    Đăng nhập
                                                </button>
                                            </div>

                                            <div class=" py-3 border-0">
                                                <div class="text-center">
                                                    Chưa có tài khoản? <a href="/Account/Register"
                                                                          class="text-primary">Đăng ký</a>
                                                </div>
                                            </div>

                                        </div>

                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

